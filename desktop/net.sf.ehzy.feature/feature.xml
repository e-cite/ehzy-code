<feature
      id="net.sf.ehzy.feature"
      label="eHZy Feature"
      version="1.0.1.qualifier"
      provider-name="http://ehzy.sf.net">

   <description>
      This is the eHZy desktop application. It is used to process the incoming SML data, manage the meters and readouts and generate the mails.
   </description>

   <copyright>
      Copyright (c) 2012 Volker Wegert (ehzy@volker-wegert.de). All rights reserved.
   </copyright>

   <license url="http://www.eclipse.org/org/documents/epl-v10.html">
      This program and the accompanying materials are made available under the terms of the Eclipse Public License v1.0 which accompanies this distribution, and is available at http://www.eclipse.org/legal/epl-v10.html.
   </license>

   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.emf.edit"/>
      <import plugin="org.eclipse.emf.ecore.xmi"/>
      <import plugin="org.eclipse.emf.edit.ui"/>
      <import plugin="org.openmuc.jsml" version="1.0.17" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="javax.mail" version="1.4.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import feature="org.eclipse.rcp" version="4.4.2.v20150204-1700"/>
      <import plugin="net.sf.ehzy.preferences" version="1.0.1" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="net.sf.ehzy.edit"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="net.sf.ehzy.editor"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="net.sf.ehzy.model"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="net.sf.ehzy.preferences"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
